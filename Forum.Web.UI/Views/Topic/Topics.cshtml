@model IEnumerable<Forum.Application.Dto.TopicDto>

@{
    ViewBag.Title = "Topics List";
}

<h2>Topics</h2>

<table>
    <thead>
        <tr>
            <th>Topic</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var topic in Model)
        {
            <tr>
                <td>@topic.Name</td>
                <td>@topic.Status</td>
                <td>
                    <!-- Link to trigger status update, actual implementation depends on JavaScript or form submission -->
                    <a href="/api/Topic/@topic.Id/UpdateStatus">Update Status</a>
                    <!-- Link to increment likes, actual implementation depends on JavaScript or form submission -->
                    <a href="/api/Topic/@topic.Id/IncrementLikes">Like</a>
                </td>
            </tr>
        }
    </tbody>
</table>
